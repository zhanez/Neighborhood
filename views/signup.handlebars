<main class="accessbody">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <h1 class="text-white">Sign Up Form</h1>

                <form class="signup">

                    <div class="form-group" id="info">
                        <label class="accesslabel text-white" for="exampleInputEmail1">First Name</label>
                        <input type="text" class="form-control" id="firstNameInput" placeholder="First Name">
                    </div>

                    <div class="form-group" id="info">
                        <label class="accesslabel text-white" for="exampleInputEmail1">Last Name</label>
                        <input type="text" class="form-control" id="lastNameInput" placeholder="Last Name">
                    </div>

                    <div class="form-group" id="info">
                        <label class="accesslabel text-white" for="exampleInputEmail1">Email address</label>
                        <input type="email" class="form-control" id="email-input" placeholder="Email">
                    </div>

                    <div class="form-group" id="info">
                        <label class="accesslabel text-white" for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="password-input" placeholder="Password">
                    </div>

                    
                    
                    <div class="form-group" id="info">
                        <label class="accesslabel text-white" placeholder="Tell Us About Yourself" for="exampleInputPassword1">Tell Us About Yourself</label>
                        <textarea class="form-control" placeholder="Provide some information about yourself"
                            id="floatingTextarea2" style="height: 100px"></textarea>
                        <label for="floatingTextarea2"></label>
                    </div>

                    <div style="display: none" id="alert" class="alert alert-danger" role="alert">
                        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                        <span class="sr-only">Error:</span> <span class="msg"></span>
                    </div>

                    <button type="submit" class="btn btn-default bg-primary text-white">Sign Up</button>
                </form>
                <br />
                <p>Or log in <a href="/login">here</a></p>
            </div>
        </div>        
    </div>

    </main>

    <script type="text/javascript" src="js/signup.js"></script>
